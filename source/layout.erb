<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />

    <!-- Bing Webmaster -->
    <meta name="msvalidate.01" content="1C0BC07928F94E91C547038281407C2C" />

    <link rel="alternate" type="application/atom+xml" title="RSS" href="http://rubyjunky.com/feed.xml">

    <link rel="icon" type="image/png" href="favicon.png" />
    
    <%= stylesheet_link_tag "normalize", "code", "style" %>
    <%= javascript_include_tag  "all" %>

    <script type="text/javascript" src="//use.typekit.net/tmc6ibm.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

    <!-- Google Analytics -->
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-42565246-1', 'rubyjunky.com');
      ga('send', 'pageview');
    </script>

    <!-- Begin MailChimp Signup Form -->
    <link href="//cdn-images.mailchimp.com/embedcode/slim-081711.css" rel="stylesheet" type="text/css">
    <style type="text/css">
      #mc_embed_signup{clear:left; font:14px Helvetica,Arial,sans-serif; }
      /* Add your own MailChimp form style overrides in your site stylesheet or in this style block.
         We recommend moving this block and the preceding CSS link to the HEAD of your HTML file. */
    </style>

    <!--End mc_embed_signup-->
  </head>

  <body>
    <div id="upper-red">
      <div id="header">
        <div id="nav-left">
          <p><%= link_to 'About me', 'http://brianvanloo.com' %></p>
        </div>

        <div id="nav-right">
          <p>Follow:</p>
          <ul>
            <li><%= link_to 'Twitter', 'https://twitter.com/BrianVanLoo' %></li>
            <li><%= link_to 'GitHub', 'https://github.com/ratdaddy' %></li>
            <li><%= link_to 'RSS', '/feed.xml' %></li>
          </ul>
        </div>
      </div>

      <div id="title">
        <div id="title-text">
          <h1>
            <%= link_to 'RubyJunky.com', '/' %>
          </h1>
          <p>A Ruby, Rails, and general programming blog by Brian VanLoo</p>
        </div>
      </div>
    </div>
    
    <div id="main" role="main">
      <div id="articles">
        <% if is_blog_article? %>
          <h1><%= current_article.title %></h1>
        <% end %>

        <%= yield %>

        <% if is_blog_article? %>
          <div id="disqus_thread"></div>
          <script type="text/javascript">
            /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
            var disqus_shortname = 'rubyjunky'; // required: replace example with your forum shortname
            var disqus_identifier = "<%= current_article.title %>";
            var disqus_title = disqus_identifier;

            /* * * DON'T EDIT BELOW THIS LINE * * */
            (function() {
              var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
              dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
              (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();
          </script>
          <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
          <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
        <% end %>
      </div>

      <div id="sidebar">
        <div id="mc_embed_signup">
          <form action="//rubyjunky.us10.list-manage.com/subscribe/post?u=9a7f7722727da357f1c301bbf&amp;id=73b56a66f8" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
              <div id="mc_embed_signup_scroll">
            <label for="mce-EMAIL"><h2>Subscribe to my mailing list to get periodic newsletter updates and instructional product offers.</h2></label>
            <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="email address" required>
              <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
              <div style="position: absolute; left: -5000px;"><input type="text" name="b_9a7f7722727da357f1c301bbf_73b56a66f8" tabindex="-1" value=""></div>
              <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
              </div>
          </form>
        </div>
        <h2>Recent Posts</h2>
        <% blog.articles[0...5].each do |article| %>
          <h3><a href="<%= article.url %>"><%= article.title %></a></h3>
        <% end %>
      </div>
    </div>
  </body>
</html>
